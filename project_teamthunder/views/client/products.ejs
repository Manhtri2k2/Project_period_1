                        <label for="panasonic"><img src="images/logo-panasonic.png" alt=""></label>
                    </li>
                    <li>
                        <input type="checkbox" class="brands" name="brand" value="samsung" id="samsung">
                        <label for="samsung"><img src="images/logo-samsung.png" alt=""></label>
                    </li>
                    <li>
                        <input type="checkbox" class="brands" name="brand" value="toshiba" id="toshiba">
                        <label for="toshiba"><img src="images/logo-toshiba.png" alt=""></label>
                    </li>
                </ul>
            </div>
        </div>
        <div class="brands-product" id="all-item">
            <p style="display: none;">Products not found</p>

                <% for(var i = 0; i < data.length; i++){
                %>
