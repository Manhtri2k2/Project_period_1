<script src="js/scrollnav.js"></script>
<script>
    $(document).ready(function () {
        var str = window.location.href;
        var res = str.split("?");
        res = res[1];
        if (typeof res !== 'undefined' && res !== 'all-item') {
            $('#switch-bar #' + res).attr('checked', true);
            var type, brands;
            $('#switch-bar .type:checked').each(function () {
                type = $(this).val();
            });
            $('#switch-bar .brands:checked').each(function () {
                brands = $(this).val();
            });
            if ($('#switch-bar #' + type).prop('checked') && $('#switch-bar #' + brands).prop('checked')) {
                $('.product-items').hide();
                $('.' + type + '.' + brands).show();
            } else {
                $('.product-items').hide();
                $('.' + type).show();
                $('.' + brands).show();
            }
        }
    });
    $("#switch-bar #type li :checkbox").click(function () {
        $("#switch-bar #type li :checkbox").prop('checked', false);
        $(this).prop('checked', true);
    });
    $("#switch-bar #brands li :checkbox").click(function () {
        $("#switch-bar #brands li :checkbox").prop('checked', false);
        $(this).prop('checked', true);
    });
    $('#switch-bar ul li').click(function () {
        // if ($('#switch-bar .type').prop('checked') || $('#switch-bar .brands').prop('checked')) {
        // 	$('#switch-bar .type').attr('checked', false);
        // 	$('#switch-bar .brands').attr('checked', false);
        // }
        $('.product-items').hide();
        $('#all-item>p').show();
        var type, brands;
        $('#switch-bar .type:checked').each(function () {
            type = $(this).val();
        });
        $('#switch-bar .brands:checked').each(function () {
            brands = $(this).val();
        });
        if ($('#switch-bar #' + type).prop('checked') && $('#switch-bar #' + brands).prop('checked')) {
            $('#all-item>p').hide();
            if ($('.' + type + '.' + brands).length) {
                $('.' + type + '.' + brands).show($('#all-item>p').hide());
            } else {
                $('#all-item>p').show();
            }
        } else {
            $('.' + type).show($('#all-item>p').hide());
            $('.' + brands).show($('#all-item>p').hide());
        }
    });
</script>
